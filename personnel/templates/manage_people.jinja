{% extends "base.jinja" %}

{% block content %}
<h1>People</h1>
{% if people %}
    <table id="people-table">
    {% for person in people %}
        <tr>
            <td>
                <a href="/people/{{person.nickname}}">{{ person.full_name }}</a>
            </td>
            <td>
                <a href="{{person.get_url}}/edit">Edit</a>
            </td>
            <td>
                <a href="{{person.get_url}}/decativate">Deactivate</a>
            </td>
        </tr>
    {% endfor %}
    </table>
{% else %}
    You're not managing anyone. <a href="/people/edit">Add someone.</a>
{% endif %}
{% endblock %}

