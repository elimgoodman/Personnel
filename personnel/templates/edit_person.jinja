{% extends "base.jinja" %}

{% block content %}
<h1>Add a Person</h1>

<form method=POST>{% csrf_token %}
    <ul id="person-fields">
        <li><label>First Name:</label><input type="text" name="fname" value="{{person.first_name}}"/></li>
        <li><label>Last Name</label><input type="text" name="lname" value="{{person.last_name}}"/></li>
        <li><label>Nickname</label><input type="text" name="nickname" value="{{person.nickname}}"/></li>
        <li><button type="submit" class="btn">Save</button></li>
    </ul>
</form>

{% endblock %}

